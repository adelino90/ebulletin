    
    <div class="col-md-3 col-md-offset-4 ebulletin-view_user-form">
            <div class="form-group text-center">
            <label>Username:</label>
            <div>
                <input type="text" class="form-control text-center" id="username" value="{{data.username}}" placeholder="Enter Username" name="username">
            </div>
            </div>
            <div class="form-group text-center">
            <label for="pwd">Password:</label>
            <div>          
                <input type="password" class="form-control text-center" id="password" value="{{data.password}}" placeholder="Enter password" name="pwd">
            </div>
            </div>
            <div class="form-group text-center">
            <label >Firstname:</label>
            <div>
                <input type="text" class="form-control text-center" id="fname" value="{{data.first_name}}" placeholder="Enter First Name" name="Firstname">
            </div>
            </div>
            <div class="form-group text-center">
            <label >Lastname:</label>
            <div>
                <input type="text" class="form-control text-center" id="lname" value="{{data.last_name}}" placeholder="Enter Last Name" name="Lastname">
            </div>
            </div>
             <div class="form-group text-center">
            <label >Usertype:</label>
            <div>
               <select id ="user_type">
                    {{#each dropdown}}
                        <option value="{{id}}">{{description}}</option>
                	{{/each}}
                </select>
            </div>
            </div>
            <div class="form-group text-center">        
            <div class="col-md-12 e-bulletin-button-grp">
                <button type="submit" class="modal__btn" id = "user_submit">Submit</button>
                <button type="submit" class="modal__btn" id = "user_cancel">Cancel</button>
            </div>
            </div>
    </div>